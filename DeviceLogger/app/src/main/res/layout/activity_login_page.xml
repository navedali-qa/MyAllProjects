<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    tools:context=".Login_Page">

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/All_Control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:keepScreenOn="true"
        android:visibility="visible">

        <LinearLayout android:id="@+id/fullscreen_content_appinfo_controls_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/fullscreen_content_appinfo_controls_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:src="@drawable/logo"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView_AppInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Mobile Inventory App"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView_ProjectInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="\nProject : "
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:id="@+id/fullscreen_content_login_controls_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/fullscreen_content_login_controls_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textView_username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/dummy_username_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textDirection="ltr"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/editText_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="Username"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/dummy_password_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textDirection="ltr"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:text="Enter Password" />

                <EditText
                    android:id="@+id/editText_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="Login"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:id="@+id/fullscreen_content_info_controls_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/fullscreen_content_info_controls_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textView_Mobile_Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Last logged in user details\n"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:text="Mobile Details" />

                <ScrollView
                    android:id="@+id/layout"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dip"
                    android:scrollbarStyle="outsideInset"
                    android:fillViewport="true">

                    <HorizontalScrollView
                        android:id="@+id/horizontalView"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dip">

                        <TableLayout

                            android:id="@+id/tableLayout_LoggedIn_Details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:visibility="visible">

                            <TableRow

                                android:layout_width="match_parent"
                                android:layout_height="fill_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:gravity="center"
                                    android:text=" S. No. \t"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="2"
                                    android:gravity="center"
                                    android:text=" User Name \t"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="3"
                                    android:gravity="center"
                                    android:text="   | \t"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="4"
                                    android:gravity="center"
                                    android:text=" Start Time "
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="5"
                                    android:gravity="center"
                                    android:text="   | \t"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="6"
                                    android:gravity="center"
                                    android:text=" End Time "
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/table_User_SNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="1"
                                    android:gravity="center"
                                    android:text=" 1 \n 2 \n 3 \n 4 \n 5 "
                                    android:textSize="14dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/table_User_Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="2"
                                    android:gravity="center"
                                    android:text=""
                                    android:textSize="14dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/table_Separator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="3"
                                    android:gravity="center"
                                    android:text=""
                                    android:textSize="14dp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/table_Start_Time1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="4"
                                    android:gravity="center"
                                    android:text=""
                                    android:textSize="14dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/table_Separator1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="5"
                                    android:gravity="center"
                                    android:text=""
                                    android:textSize="14dp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/table_End_Time1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_column="6"
                                    android:gravity="center"
                                    android:text=""
                                    android:textSize="14dp"
                                    android:textStyle="normal"
                                    android:visibility="visible" />

                            </TableRow>

                        </TableLayout>

                    </HorizontalScrollView>

                </ScrollView>

                <Button
                    android:id="@+id/buttonProceed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="Proceed"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:id="@+id/fullscreen_content_logout_controls_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/fullscreen_content_logout_controls_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textView_Logged_User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hi"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textDirection="ltr"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Enter Password to logout"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textDirection="ltr"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/editText_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="LogOut"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullscreen_content_admin_controls_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/fullscreen_content_admin_controls_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/activate_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:onClick="onClick"
                    android:text="Activate Admin"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/deactivate_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activate_admin"
                    android:onClick="onClick"
                    android:text="Deactivate Admin"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
