<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.navedali.demoapplication.LoginPage">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <TextView
            android:id="@+id/textView_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|bottom|right"
            android:text="@string/dummy_username_text"
            android:textDirection="ltr"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            tools:text="Enter userName" />

        <EditText
            android:id="@+id/editText_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:gravity="top|bottom|left"
            android:inputType="textEmailAddress"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:gravity="top|bottom|right"
            android:text="@string/dummy_password_text"
            android:textDirection="ltr"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Enter Password" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="140dp"
            android:ems="10"
            android:gravity="top|bottom|left"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="200dp"
            android:text="Login" />

        <TextView
            android:id="@+id/textView_Mobile_Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:text="Mobile Details"
            tools:text="Mobile Details" />

        <TableLayout
            android:id="@+id/tableLayout_Mobile_Details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="70dp">

            <TableRow

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:text="   Name :   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="   Name"
                    android:id="@+id/table_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

            </TableRow>

            <TableRow

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="   Model :   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="   Model"
                    android:id="@+id/table_Model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

            </TableRow>

            <TableRow

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="   Version :   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="   Version"
                    android:id="@+id/table_Version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textSize="15dp"
                    android:textStyle="normal"/>

            </TableRow>

            <TableRow

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="   S.no :   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="   S.no "
                    android:id="@+id/table_S_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textSize="15dp"
                    android:textStyle="normal"/>

            </TableRow>

            <TableRow

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="   IMEI nu. :   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="   IMEI nu."
                    android:id="@+id/table_IMEI_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textSize="15dp"
                    android:textStyle="normal"/>

            </TableRow>

            <TableRow

                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:text="   Start time :   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="   Start time."
                    android:id="@+id/table_start_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:textSize="15dp"
                    android:textStyle="normal"/>

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/buttonProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="200dp"
            android:text="Proceed" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="200dp"
            android:text="LogOut" />

        <TextView
            android:id="@+id/textView_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="50dp"
            android:gravity="top|bottom|right"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="40dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="DD : HH : MM : SS" />

        <TextView
            android:id="@+id/textView_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="300dp"
            android:gravity="top|bottom|right"
            android:textDirection="ltr"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="Enter Password to logout" />

        <EditText
            android:id="@+id/editText_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="320dp"
            android:ems="10"
            android:gravity="top|bottom|left"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </FrameLayout>

</FrameLayout>
